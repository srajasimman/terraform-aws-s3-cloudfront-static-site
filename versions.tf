terraform {
  required_version = ">= 1.0.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">= 4.0.0"
    }
    random = {
      source  = "hashicorp/random"
      version = ">= 3.0.0"
    }
  }
}

# AWS Provider configuration for certificate
provider "aws" {
  alias  = "us-east-1"
  region = "us-east-1"
}
